---
import Layout from "~/layouts/Layout.astro";
import Section from "~/components/Section.astro";
import Heading from "~/components/Heading.astro";
import { discord } from "~/data/config";

const serverInfo = {
	name: "Voxel Earth",
	status: "Online",
	host: "play.voxelearth.org",
	playersOnline: 182,
	maxPlayers: 320,
	ping: 42,
	motd: ["Type /visit <place> to jump anywhere in the world.", "Explore real-world places rebuilt as Minecraft voxels!"],
	logo: "/icons/android-chrome-192x192.png",
};

const pageMeta = {
	title: "Play",
	pageTitle: "Play | Voxel Earth",
	description: "Connect to play.voxelearth.org and use /visit to explore real-world places rebuilt as Minecraft voxels.",
};
---

<Layout title={pageMeta.title} pageTitle={pageMeta.pageTitle} description={pageMeta.description}>
  <Section>
    <Heading>
      <h2 slot="heading-title" class="font-black text-brand-green h2">Play now</h2>
      <p slot="heading-content" class="text-pretty">
        Connect to our Minecraft server at <code>play.voxelearth.org</code> and type <code>/visit</code> plus any city or landmark to beam there instantly.
      </p>
    </Heading>

    <div class="mx-auto max-w-4xl rounded-[32px] border border-brand-green/25 bg-gradient-to-r from-brand-green to-emerald-500 p-6 shadow-2xl">
      <div class="flex flex-col gap-6 lg:flex-row lg:items-center lg:justify-between">
        <div class="flex items-center gap-4">
          <div class="flex h-24 w-24 items-center justify-center rounded-2xl border-4 border-white/30 bg-white shadow-lg">
            <img src={serverInfo.logo} alt="Voxel Earth logo" class="h-20 w-20 object-contain" loading="lazy" decoding="async" />
          </div>
          <div>
            <h3 class="text-3xl font-black text-white drop-shadow">Voxel Earth</h3>
            <p class="text-white/80">{serverInfo.host} - {serverInfo.status}</p>
          </div>
        </div>
        <div class="grid gap-2 text-white text-sm uppercase tracking-[0.3em] text-right">
          <span>{serverInfo.playersOnline} / {serverInfo.maxPlayers} Online</span>
          <span>{serverInfo.ping}ms latency</span>
        </div>
      </div>
      <div class="mt-6 rounded-2xl border border-white/30 bg-black/30 p-4 font-mono text-lg text-white shadow-inner">
        {serverInfo.motd.map((line) => (
          <div class="flex items-center gap-3">
            <span class="inline-block h-2 w-2 rounded-full bg-lime-300"></span>
            <span class="text-white">{line}</span>
          </div>
        ))}
      </div>
    </div>
  </Section>

  <Section class="bg-white">
    <div class="mx-auto flex max-w-5xl flex-col gap-8 rounded-[36px] border border-brand-green/30 bg-gradient-to-br from-emerald-50 via-white to-emerald-100 p-10 shadow-[0_24px_60px_rgba(0,0,0,0.08)] lg:flex-row lg:items-center lg:justify-between">
      <div class="max-w-2xl">
        <p class="text-xs font-semibold uppercase tracking-[0.45em] text-brand-green/70">Community Servers</p>
        <h2 class="mt-3 text-3xl font-black text-slate-900">Have your own Voxel Earth realm?</h2>
        <p class="mt-4 text-lg leading-relaxed text-slate-600">
          We keep a public list of community servers so explorers can jump into new regions anytime. If you're running your own instance,
          share the details and we'll feature it here too!
        </p>
      </div>
      <div class="flex flex-col gap-4">
        <a
          href={discord.href}
          target="_blank"
          rel="noopener noreferrer"
          class="inline-flex items-center justify-center rounded-full bg-brand-green px-8 py-3 text-base font-semibold uppercase tracking-[0.25em] text-white shadow-lg transition hover:bg-brand-green/90"
        >
          Submit via Discord
        </a>
        <a
          href="/contact"
          class="inline-flex items-center justify-center rounded-full border border-brand-green/40 bg-white px-8 py-3 text-base font-semibold uppercase tracking-[0.2em] text-brand-green shadow-sm transition hover:border-brand-green"
        >
          Contact Us
        </a>
      </div>
    </div>
  </Section>
</Layout>
