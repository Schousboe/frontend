---
import Layout from "~/layouts/Layout.astro";
import Section from "~/components/Section.astro";
import Heading from "~/components/Heading.astro";
import FormBook from "~/components/forms/FormBook.astro";

const pageMeta = {
	title: "Book",
	pageTitle: "Book | Voxel Earth",
	description: "Schedule time with the Voxel Earth team for demos, workshops, or custom voxelization requests.",
};
---

<Layout title={pageMeta.title} pageTitle={pageMeta.pageTitle} description={pageMeta.description}>
	<Section>
		<Heading>
			<h2 slot="heading-title" class="font-black text-brand-green h2">Book a table</h2>
			<p slot="heading-content" class="text-pretty">
				Reserve a table for your next meal. We'll get back to you to confirm your booking.
			</p>
		</Heading>

		<FormBook />
	</Section>
</Layout>
